<h1 class='text-center'> profile </h1>

<div class='container-fluid'>
	<div class='row'>
		<div class='col-md-3'>
			<h4> profile</h4>

				<img class='card-img-top' src='https://placeholdit.imgix.net/~text?txtsize=33&txt=318%C3%97180&w=200&h=180'>
			<a href="/edit">edit page</a>





			<form action="/edit" method="POST" enctype="multipart/form-data">
				<label class="btn btn-default btn-file">
					Upload File <input type="file" name="myFile" class="hidden">
				</label>
				<input type="submit" class="btn btn-primary">
			</form>




			<p> bio</p>
			

		</div>
		<div class='col-md-9'>
			<h2>users created events</h2>
			<%events.forEach(function(events) {%>

			<div class='card' style='width: 20rem;'>


				<img class='card-img-top' src='https://placeholdit.imgix.net/~text?txtsize=33&txt=318%C3%97180&w=200&h=180'>
				<div class='card-block'>


					<div class='eventName'>
						<h4><%= events.name%></h4>
					</div>
					<div class='eventDescription'>
						<p><%=events.description%>
							<br>
							<%=events.address %>
						</p>
					</div>
				</div>
			</div>
			<%})%>
		</div>
	</div>
</div>






<a href="/auth/logout" class='btn btn-lg'>log out</a>
