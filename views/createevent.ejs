</ol>

<div class='container-fluid'>
	<div id="createbg" class='row'>
		
		<div class='col-sm-12 col-md-3 eventpage'>
			<h1 class='text-center'>Create an Event</h1>
			<form action='/profile' method='POST'>
				<div class="form-group">
					<input type="text" class="form-control" name="name" placeholder="Name">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="description" placeholder="Description">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="address" placeholder="Address">
				</div>
				<input type="submit" class="btn btn-primary btn-block">
			</form>
		</div>


		<div class='col-sm-12 col-md-3 eventpage'>
		<h1 class="text-center">Events</h1>
			<div class='card eventpage'>
				<%events.forEach(function(events) {%>
				<img class='card-img-top' src="https://maps.googleapis.com/maps/api/streetview?size=400x400&location=<%=events.lat%>,<%=events.lng%>&fov=90&heading=235&pitch=10&initMap" alt="Card image cap">
				
				<div class='card-block'>

				<h4><%=events.name%></h4>
					<p><%=events.description%></p>
					<p><%=events.address%></p>
				
				</div>
				<%})%>
			
			</div>
		</div>

		<div class="container">
		<div class="row">
		<div class='col-md-12'>
		</div>
		</div>
		</div>



			
		</div>
	</div>
</div>

			<div id="map-container card" class="z-depth-1"></div>

		<script>
			var markers = <%-JSON.stringify(events) %>
		</script>

