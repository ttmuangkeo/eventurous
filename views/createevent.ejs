
<ol class="breadcrumb text-center">
  <li><a href="/">Home</a></li>
  <li><a href="/createevent">Create Event</a></li>
  <li><a href="/events">Events</a></li>
  <li><a href="/profile">Profile</a></li>
</ol>

<div class='container-fluid'>
	<div class='row'>
		
		<div class='col-md-3 eventpage'>
		<h1>Events</h1>
			<div class='card eventpage'>
				<%events.forEach(function(events) {%>
				<img class='card-img-top' src="http://maps.googleapis.com/maps/api/staticmap?center=<%=events.lat%>,<%=events.lng%>&zoom=13&size=200x180" alt="Card image cap">
				
				<div class='card-block'>

				<h4><%=events.name%></h4>
					<p><%=events.description%></p>
					<p><%=events.address%></p>
				
				</div>
				<%})%>
			
			</div>
		</div>
		<div class='col-md-6'>
			<div id='map'></div>
		</div>



		<div class='col-md-3 eventpage'>
			<h1 class='text-center'>create an event</h1>
			<form action='/profile' method='POST'>
				<div class="form-group">
					<input type="text" class="form-control" name="name" placeholder="Name">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="description" placeholder="Description">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="address" placeholder="Address">
				</div>
				<input type="submit" class="btn btn-primary btn-block">
			</form>
		</div>
			
		</div>
	</div>
</div>


		<script>
			var markers = <%-JSON.stringify(events) %>
		</script>

		<script async defer
		src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDr2pTOmH22vv8f6gv_zyPqPMgDLSet9k4&callback=initMap">
	</script>

	<script src="/script.js"></script>