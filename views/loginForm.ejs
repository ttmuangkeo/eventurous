<ol class="breadcrumb text-center black">
	<li><a class="white-text" href="/">Home</a></li>
	<li><a class="white-text" href="/auth/signup">Sign Up</a></li>
	<li><a class="white-text" href="/events">Events</a></li>
</ol>
<div class="container-fluid black">
	<div class="row">
		<div class="col-md-6">
			<div class="parallax3">
				<h1 class="login-title sub-text deep-orange-text text-center animated slideInDown"><strong>Eventurous</strong></h1>
				<hr class="signup-border animated slideInLeft">
				<h2 class="login-title sub-text deep-orange-text text-center animated fadeInUp"><strong>Welcome Back!</strong></h2>
				<br>
			</div>
		</div>
		<div class="col-md-6 text-center">
			<form action="/auth/login" method="POST" role="form" class="card sub-text black animated zoomIn">
